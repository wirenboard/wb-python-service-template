{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "WB Python Service Template",
    "description": "Configuration schema for wb-python-service-template",
    "configFile": {
        "path": "/etc/wb-python-service-template.conf",
        "service": "wb-python-service-template"
    },
    "properties": {
        "mode": {
            "title": "Work mode",
            "type": "string",
            "enum": [
                "one_thread",
                "threaded"
            ],
            "default": "one_thread",
            "description": "Service operation mode"
        }
    },
    "required": [
        "mode"
    ],
    "translations": {
        "ru": {
            "WB Python Service Template": "Шаблон Python сервиса для WB",
            "Work mode": "Режим работы",
            "one_thread": "Однопоточный режим",
            "threaded": "Многопоточный режим"
        }
    }
}
